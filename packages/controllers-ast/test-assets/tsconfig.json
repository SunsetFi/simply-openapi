{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "noEmit": true
  },
  "include": ["./src/**/*"]
}
