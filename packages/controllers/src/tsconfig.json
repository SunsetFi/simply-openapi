{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "declaration": true,
    "declarationDir": "../dts",
    "sourceMap": true
  },
  "exclude": ["**/*.spec.ts"]
}
