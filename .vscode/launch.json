  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "type": "node",
      "name": "Test controllers",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}/packages/controllers",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
      "request": "launch",
      "type": "node",
      "name": "Test controllers-ast",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}/packages/controllers-ast",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
      "request": "launch",
      "type": "node",
      "name": "Launch Example",
      "program": "${workspaceFolder}/examples/simple/src/index.ts",
      "cwd": "${workspaceFolder}/examples/simple",
      "outFiles": ["${workspaceFolder}/examples/simple/dist/**/*.js"]
    },
    {
      "request": "launch",
      "type": "node",
      "name": "Launch Example OpenAPI builder",
      "program": "${workspaceFolder}/examples/simple/src/build-swagger.ts",
      "cwd": "${workspaceFolder}/examples/simple",
      "outFiles": ["${workspaceFolder}/examples/simple/dist/**/*.js"]
    }
  ]
}
